import numpy as np
import pandas as pd
import statsmodels.api as sm


# Backward Elimination from https://towardsdatascience.com/feature-selection-with-pandas-e3690ad8504b

def BackwardEliminationPvalue(X_Train, y_Train):

    X = X_Train.copy()
    y = y_Train.copy()
    
    cols = list(X.columns)
    pmax = 1
    
    while (len(cols) > 0):
        p= []
        X_1 = X[cols]
        X_1 = sm.add_constant(X_1)
        model = sm.OLS(y,X_1).fit()
        p = pd.Series(model.pvalues.values[1:],index = cols)      
        pmax = max(p)
        feature_with_p_max = p.idxmax()
        if(pmax > 0.05):
            cols.remove(feature_with_p_max)
        else:
            break
                    
    return cols
